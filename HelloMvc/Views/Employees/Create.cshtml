@model HelloMvc.Models.Employee

@{
    ViewData["Title"] = "Create";
}


<h3 class="text-center">Create Employee</h3>

<div class="row">
    <div class="col-md-8 offset-md-3 bg-white p-3 shadow">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DaysInOffice" class="form-label"></label>
                <input asp-for="DaysInOffice" class="form-control" />
                <span asp-validation-for="DaysInOffice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label"></label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            
            
            <div class="mb-3">
                <label asp-for="StartWorkingTime" class="form-label"></label>
                <input asp-for="StartWorkingTime" class="form-control" type="time" />
                <span asp-validation-for="StartWorkingTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndWorkingTime" class="form-label"></label>
                <input asp-for="EndWorkingTime" class="form-control"  type="time" />
                <span asp-validation-for="EndWorkingTime" class="text-danger"></span>
            </div>

            
     

            <div class="mb-3 text-end">
                
                <a asp-action="Index" class="btn  btn-outline-secondary">Back to List</a>
                <input type="submit" value="Create" class="btn btn-primary w-25" />
            </div>
        </form>
    </div>
</div>

<div>
 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
